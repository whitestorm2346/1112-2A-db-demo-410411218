<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crown Clothing</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="header">
    <a href="/" class="logo-container">
      <img src='/assets/crown.svg' />
    </a>
    <div class="options">
      <a href="/shop" class="option">Shop</a>
      <a href="/shop" class="option">Contact</a>
      <a href="/signin" class="option">Sign In</a>
      <div class="cart-icon" onclick="cartToggle()">
        <img class="shopping-icon" src="/assets/shopping-bag.svg" alt="">
      </div>
      <div class="cart-dropdown">
        <div class="cart-items">
          <div class="cart-item">
             <img src="/img/hats/brown-cowboy.png" alt="item">
             <div class="item-details">
               <span class="name">Brown Cowboy</span>
               <span class="price">4 * $35</span>
             </div>
          </div>
          <div class="cart-item">
            <img src="/img/hats/blue-jean-jacket.png" alt="item">
            <div class="item-details">
              <span class="name">Blue Jean Jacket</span>
              <span class="price">1 * $90</span>
          </div>
        </div>
        <button class="custom-button">GO TO CHECKOUT</button>
      </div>
    </div>
    </div>
  </div>
  
  <div class="shop-page">
    <div class="collection-overview">
      <h2 style="text-align: center;">Midprep_xx from DB: <%= name %>, <%= ID %></h2>
      <div class="collection-preview">
        <h2 class="title">Hats</h2>
        <div class="preview">
          <% for(let i=0; i<data1.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data1[i].img_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data1[i].pName %></span>
                <span class="price"><%= data1[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>

      <div class="collection-preview">
        <h2 class="title">Sneakers</h2>
        <div class="preview">
          <% for(let i=0; i<data2.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data2[i].img_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data2[i].pName %></span>
                <span class="price"><%= data2[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script>
    function cartToggle(){
      p = document.querySelector('.cart-dropdown');
      p.classList.toggle("show");
    }
  </script>
</body>
</html>